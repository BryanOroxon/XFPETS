                Grid.Row="1"
                Grid.Column="1"
                ItemsSource="{Binding Pets}">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Frame
                                HasShadow="True"
                                BorderColor="DarkGray"
                                CornerRadius="15"
                                HeightRequest="250"
                                HorizontalOptions="Center"
                                VerticalOptions="CenterAndExpand">
                                <StackLayout>
                                    <Label
                                        Text="{Binding Name}"
                                        FontAttributes="Bold"
                                        FontSize="Large"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center" />
                                    <Image
                                        Source="{Binding Image}"
                                        Aspect="AspectFill"
                                        HeightRequest="150"
                                        WidthRequest="150"
                                        HorizontalOptions="Center" />
                                    <Label
                                        Text="{Binding Gender}"
                                        HorizontalOptions="Center" />
                                    <Label
                                        Text="{Binding Breed}"
                                        FontAttributes="Italic"
                                        HorizontalOptions="Center"
                                        MaxLines="5"
                                        LineBreakMode="TailTruncation" />
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </-->
            <ListView
                x:Name="PetsList"
                Grid.Row="2"
                Grid.Column="1"
                ItemsSource="{Binding Items}"
                RefreshCommand="{Binding LoadItemsCommand}"
                ItemSelected="OnItemSelected"
                IsPullToRefreshEnabled="True"
                BackgroundColor="Transparent"
                HasUnevenRows="true">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame
                                HasShadow="True"
                                BorderColor="DarkGray"
                                CornerRadius="15"
                                HeightRequest="230"
                                WidthRequest="260"
                                HorizontalOptions="CenterAndExpand"
                                VerticalOptions="CenterAndExpand">
                                <StackLayout>
                                    <Label
                                        Text="{Binding Name}"
                                        FontAttributes="Bold"
                                        FontSize="Large"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center" />
                                    <Image
                                        Source="{Binding Image}"
                                        Aspect="AspectFill"
                                        HeightRequest="160"
                                        WidthRequest="160"
                                        HorizontalOptions="Center" />
                                    <StackLayout
                                        Orientation="Horizontal"
                                        HorizontalOptions="Center">
                                        <Label
                                            Text="{Binding Gender}"
                                            HorizontalOptions="Center" />
                                        <Label
                                            Text="{Binding Breed}"
                                            FontAttributes="Italic"
                                            HorizontalOptions="Center"
                                            MaxLines="5"
                                            LineBreakMode="TailTruncation" />
                                    </StackLayout>
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button
                Grid.Row="4"
                Grid.Column="1"
                TranslationY="-10"
                BackgroundColor="Orange"
                CornerRadius="25"
                Clicked="Donate_Clicked"
                Text="Save a Life. Donate a Shelter Pet!" />
            <Image
                Grid.Row="3"
                Grid.Column="1"
                WidthRequest="50"
                HeightRequest="50"
                TranslationY="5"
                Source="dog1"
                HorizontalOptions="CenterAndExpand" />
        </Grid>
    </ScrollView>
</ContentPage>
